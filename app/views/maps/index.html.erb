<% provide :head_tags do %>
  <meta name=‘turbolinks-visit-control’ content=‘reload’>
    <script>

      document.addEventListener("DOMContentLoaded", function(){

        loadMap()
      });

    </script>
<% end %>


<div class="container-fluid">
  <div class="header my-4">
    <h2 style="color: #005EB8;">Supermarkets nearby</h2>
  <div>
  <div class="row mt-4">
    <div class="col-md-8">
      <div id="map"></div>
    </div>
    <div class="col-md-3">
      <div class="jumbatron bg-light p-4 rounded">
      <form class="form-inline" action="/maps" method="POST">
        <h3 class="text-center mt-5 mb-4" style="color: #005EB8;"> Enter your postcode </h3>
        <div class="form-group">
          <input name="postcode" id="address" type="textbox" class="form-control form-control-lg mr-2" placeholder="Enter your postcode">
          <br>
          <input id="submit" type="button" class="btn btn-primary nhs-color" value="Submit">
        </div>
      </form>
      </div>
      <div id="store-list"></div>
    </div>
  </div>
</div>
  
